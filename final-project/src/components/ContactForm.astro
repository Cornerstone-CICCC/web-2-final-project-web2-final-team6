---
import { init, send } from "emailjs-com";

let emailStatusMessage = "";

if (Astro.request.method === "POST") {
  try {
    const data = await Astro.request.formData();
    const full_name = data.get("full_name");
    const phone_number = data.get("phone_number");
    const service = data.get("service");
    const time = data.get("time");

    console.dir({
      full_name,
      phone_number,
      service,
      time,
      message: data.get("message"),
    });
    init(import.meta.env.PUBLIC_KEY);

    const emailData = {
      full_name,
      phone_number,
      service,
      time,
      message: data.get("message"),
    };

    await send(
      // 「Email Services」を開くと「Service ID」が表示されています
      import.meta.env.SERVICE_ID,
      // 「Email Templates」を開くと「Template ID」が表示されています
      import.meta.env.TEMPLATE_ID,
      emailData,
      // 「Account」を開くと「Public Key」が表示されています
      import.meta.env.PUBLIC_KEY
    );

    emailStatusMessage = "メールが送信されました！返信をお待ち下さい。";

    // Do something with the data
  } catch (error) {
    emailStatusMessage =
      "メール送信時にエラーが発生しました！お手数ですが再度送信してください。";
    if (error instanceof Error) {
      console.error(emailStatusMessage + ":", error.message);
    }
  }
}
