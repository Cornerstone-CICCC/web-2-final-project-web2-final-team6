---
const { title, onClick } = Astro.props;
---

<button class="button" onclick={onClick}>
    {title}
</button>

<style>
    .button {
        color: white;
        background-color: black;
        font-size: 20px;
        font-family: "Roboto", serif;
        font-style: normal;
        font-weight: 400;
        border-radius: 5px;
        border: 1px solid black;
        padding: 18px;
        margin-top: 30px;
    }
</style>
